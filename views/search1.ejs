<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="css/styles.css">
  <script src="https://kit.fontawesome.com/e96230aec2.js" crossorigin="anonymous"></script>

  <title>JukeBox Search</title>
</head>

<body>
  <div class="search-pg-heading">
    <h1><strong>JukeBox</strong></h1>
  </div>
  <form class="" action="/search" method="post">
    <div class="search-container">
      <input class="search-input" name="searchitem" type="text" placeholder="Search your favourite songs, albums and artists">
    </div>
  </form>
  <div class="display">
    <% if (show == "Not Found") {%>
    <div class="search-record">
      <p class="default">Sorry! couldn't find your Searched item. Please check for typos.</p>
    </div>
    <% } %>
    <% if (show != "" && show != "Not Found"){%>
    <div class="row">
      <div class="col-3 headers">
        <p>#</p>
      </div>
      <div class="col-3 headers">
        <p>TITLE</p>
      </div>
      <div class="col-3 headers">
        <p>ALBUM</p>
      </div>
      <div class="col-3 headers">
        <p>ARTIST</p>
      </div>
    </div>
    <% for(var i = 0 ;i<show.length; i++){ %>
    <div class="row records">
      <div class="search-record song_id col-3">
        <p class="text-ellipsis"><%= show[i].track%></p>
      </div>
      <div class="search-record song col-3">
        <p class="text-ellipsis"><%= show[i].title%></p>
      </div>
      <div class="search-record album col-3">
        <p class="text-ellipsis"><%= show[i].album%></p>
      </div>
      <div class="search-record artist col-3">
        <p class="text-ellipsis"><%= show[i].artist%></p>
      </div>
    </div>
    <% } %>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="app1.js" charset="utf-8"></script>
</body>

</html>
